# Skippy System Manager - Configuration Template
# Version: 1.0.0
# Last Updated: 2025-11-05
#
# INSTRUCTIONS:
# 1. Copy this file to config.env (NOT tracked by git)
# 2. Fill in your actual values (remove the <angle brackets>)
# 3. Set permissions: chmod 600 config.env
# 4. Source in your scripts: source /path/to/config.env
#
# SECURITY WARNING:
# - NEVER commit config.env to git (it's in .gitignore)
# - NEVER share credentials in plain text
# - Use chmod 600 to restrict file access
# - Rotate credentials regularly

# ==============================================================================
# BASE PATHS
# ==============================================================================

# Primary skippy installation directory
# Default: /home/dave/skippy
export SKIPPY_BASE_PATH="<your_skippy_path>"

# WordPress installation directory
# Default: /home/dave/RunDaveRun
export WORDPRESS_BASE_PATH="<your_wordpress_path>"

# Derived paths (usually don't need to change these)
export SKIPPY_SCRIPTS_PATH="${SKIPPY_BASE_PATH}/scripts"
export SKIPPY_CONVERSATIONS_PATH="${SKIPPY_BASE_PATH}/conversations"
export SKIPPY_DOCUMENTATION_PATH="${SKIPPY_BASE_PATH}/documentation"
export SKIPPY_PROTOCOLS_PATH="${SKIPPY_BASE_PATH}/documentation/protocols"
export SKIPPY_BACKUP_PATH="${SKIPPY_BASE_PATH}/backups"

export WORDPRESS_BACKUP_PATH="${WORDPRESS_BASE_PATH}/backups"
export WORDPRESS_CONTENT_PATH="${WORDPRESS_BASE_PATH}/wp-content"

# ==============================================================================
# REMOTE SERVER CONFIGURATION
# ==============================================================================

# Remote server (ebon) connection details
export EBON_HOST="<user>@<ip_address>"           # Example: ebon@10.0.0.29
export EBON_PASSWORD="<ebon_ssh_password>"        # TODO: Migrate to SSH keys
export EBON_PORT="22"                             # SSH port (usually 22)

# SSH connection options
export SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"
export SSH_TIMEOUT="30"                           # SSH connection timeout in seconds

# Optional: Path to SSH private key (for key-based auth)
# export SSH_PRIVATE_KEY="${HOME}/.ssh/id_rsa_ebon"

# ==============================================================================
# WORDPRESS CONFIGURATION
# ==============================================================================

# WordPress site URL
export WP_SITE_URL="<your_wordpress_url>"         # Example: https://rundaverun.org

# WordPress admin credentials (for automated updates)
export WP_ADMIN_USER="<wordpress_admin_username>"
export WP_ADMIN_PASSWORD="<wordpress_admin_password>"

# WordPress database credentials (for backups)
export WP_DB_NAME="<database_name>"
export WP_DB_USER="<database_user>"
export WP_DB_PASSWORD="<database_password>"
export WP_DB_HOST="localhost"                     # Usually localhost
export WP_DB_PREFIX="wp_"                         # WordPress table prefix

# ==============================================================================
# CLOUD STORAGE CONFIGURATION
# ==============================================================================

# Google Drive configuration
export GDRIVE_CLIENT_ID="<google_client_id>"
export GDRIVE_CLIENT_SECRET="<google_client_secret>"
export GDRIVE_REFRESH_TOKEN="<google_refresh_token>"
export GDRIVE_BACKUP_FOLDER="Skippy_Backups"

# Rclone remote name (if using rclone)
export RCLONE_REMOTE="gdrive"
export RCLONE_CONFIG="${HOME}/.config/rclone/rclone.conf"

# ==============================================================================
# GITHUB CONFIGURATION
# ==============================================================================

# GitHub repository details
export GITHUB_REPO_OWNER="<github_username>"
export GITHUB_REPO_NAME="<repository_name>"
export GITHUB_TOKEN="<github_personal_access_token>"

# Git configuration
export GIT_USER_NAME="<your_name>"
export GIT_USER_EMAIL="<your_email>"

# ==============================================================================
# EMAIL/NOTIFICATION CONFIGURATION
# ==============================================================================

# SMTP configuration for email notifications
export SMTP_HOST="<smtp.example.com>"
export SMTP_PORT="587"
export SMTP_USER="<smtp_username>"
export SMTP_PASSWORD="<smtp_password>"
export SMTP_FROM="<from_email@example.com>"

# Alert recipients (comma-separated)
export ALERT_EMAIL_TO="<alert_email@example.com>"

# Webhook URL for critical alerts (optional)
export WEBHOOK_URL="<webhook_url>"

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================

# Backup retention policy
export BACKUP_RETENTION_DAYS="30"                 # Keep backups for N days
export BACKUP_FREQUENCY="daily"                   # daily, weekly, monthly

# Backup verification
export BACKUP_VERIFY_ENABLED="true"               # Enable backup verification
export BACKUP_TEST_RESTORE="false"                # Test restore (resource-intensive)

# Compression settings
export BACKUP_COMPRESSION="gzip"                  # gzip, bzip2, xz
export BACKUP_COMPRESSION_LEVEL="6"               # 1-9 (higher = better compression)

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================

# Resource thresholds for alerts
export DISK_USAGE_THRESHOLD="90"                  # Alert when disk >90%
export MEMORY_USAGE_THRESHOLD="80"                # Alert when memory >80%
export CPU_USAGE_THRESHOLD="90"                   # Alert when CPU >90%

# Monitoring intervals
export MONITOR_INTERVAL="300"                     # Check every N seconds (5 min)
export DASHBOARD_UPDATE_INTERVAL="3600"           # Update dashboard every N seconds (1 hour)

# Log retention
export LOG_RETENTION_DAYS="90"                    # Keep logs for N days

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# Security scanning
export SECURITY_SCAN_ENABLED="true"
export CREDENTIAL_SCAN_ENABLED="true"
export VULNERABILITY_SCAN_ENABLED="true"

# Allowed IP addresses for remote access (comma-separated)
export ALLOWED_IPS="127.0.0.1,10.0.0.0/24"

# Session timeout (in seconds)
export SESSION_TIMEOUT="3600"                     # 1 hour

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================

# Test environment
export TEST_MODE="false"                          # Set to "true" for testing
export TEST_BASE_PATH="/tmp/skippy-test"
export TEST_WP_PATH="/tmp/wordpress-test"

# Test database (separate from production)
export TEST_DB_NAME="<test_database_name>"
export TEST_DB_USER="<test_database_user>"
export TEST_DB_PASSWORD="<test_database_password>"

# ==============================================================================
# MCP SERVER CONFIGURATION
# ==============================================================================

# MCP server settings
export MCP_SERVER_NAME="general-server"
export MCP_SERVER_VERSION="2.0.0"

# Timeouts (in seconds)
export MCP_DEFAULT_TIMEOUT="30"
export MCP_LONG_TIMEOUT="120"
export MCP_WP_TIMEOUT="60"

# ==============================================================================
# DOCKER CONFIGURATION (Optional)
# ==============================================================================

# Docker settings (if using Docker)
export DOCKER_ENABLED="false"
export DOCKER_REGISTRY="<docker_registry_url>"
export DOCKER_USERNAME="<docker_username>"
export DOCKER_PASSWORD="<docker_password>"

# ==============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# ==============================================================================

# Ethereum node configuration (if using blockchain scripts)
export ETH_NODE_URL="<ethereum_node_url>"
export ETH_PRIVATE_KEY="<ethereum_private_key>"
export CHAINLINK_NODE_URL="<chainlink_node_url>"

# ==============================================================================
# CUSTOM VARIABLES
# ==============================================================================

# Add your custom environment variables below:
# export MY_CUSTOM_VAR="value"


# ==============================================================================
# VALIDATION (DO NOT EDIT)
# ==============================================================================

# This section validates required variables
# Run: bash -c 'source config.env && bash scripts/utility/validate_config.sh'

export CONFIG_VERSION="1.0.0"
export CONFIG_LOADED="true"
