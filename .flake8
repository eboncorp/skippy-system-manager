[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity (cyclomatic complexity)
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    conversations,
    archive,
    legacy_system_managers,
    .github

# Ignore specific errors
# whitespace before ':' (conflicts with black)
# line too long (handled by max-line-length)
# line break before binary operator (conflicts with PEP 8)
# line break after binary operator
# imported but unused (be more lenient)
ignore = E203,E501,W503,W504,F401

# Select specific errors to check
# pycodestyle errors, pycodestyle warnings, pyflakes, mccabe complexity
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811

# Show source code for errors
show-source = True

# Show pep8 code for errors
show-pep8 = True

# Count errors
count = True

# Output format
format = default

# Statistics
statistics = True

# Benchmark
benchmark = False
