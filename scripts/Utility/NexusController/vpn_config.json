{
  "vpn_providers": {
    "nordvpn": {
      "enabled": true,
      "type": "commercial",
      "config_path": "/etc/openvpn/nordvpn",
      "credentials_file": "~/.nexus/nordvpn_credentials",
      "preferred_servers": ["us", "ca", "uk"],
      "protocol": "openvpn"
    },
    "wireguard": {
      "enabled": true,
      "type": "selfhosted", 
      "config_path": "/etc/wireguard",
      "interface": "wg0",
      "auto_connect": false
    },
    "openvpn": {
      "enabled": true,
      "type": "selfhosted",
      "config_path": "/etc/openvpn/custom",
      "auto_connect": false
    }
  },
  "auto_selection": {
    "enabled": true,
    "priority": ["nordvpn", "wireguard", "openvpn"],
    "fallback_enabled": true,
    "health_check_interval": 300
  },
  "security": {
    "kill_switch": true,
    "dns_leak_protection": true,
    "ipv6_blocking": true
  }
}