{
  "cloud_providers": {
    "aws": {
      "enabled": true,
      "type": "compute",
      "services": ["ec2", "s3", "lambda", "ecs", "cloudformation"],
      "credentials_file": "~/.aws/credentials",
      "regions": ["us-east-1", "us-west-2"],
      "auto_scaling": true,
      "cost_monitoring": true
    },
    "google_cloud": {
      "enabled": true,
      "type": "compute",
      "services": ["compute", "storage", "functions", "kubernetes"],
      "credentials_file": "~/.config/gcloud/application_default_credentials.json",
      "regions": ["us-central1", "us-east1"],
      "auto_scaling": true,
      "cost_monitoring": true
    },
    "azure": {
      "enabled": true,
      "type": "compute",
      "services": ["virtual_machines", "storage", "functions", "aks"],
      "credentials_file": "~/.azure/credentials",
      "regions": ["eastus", "westus2"],
      "auto_scaling": true,
      "cost_monitoring": true
    },
    "digitalocean": {
      "enabled": true,
      "type": "compute",
      "services": ["droplets", "volumes", "kubernetes", "functions"],
      "api_token_file": "~/.nexus/do_token",
      "regions": ["nyc1", "sfo3", "ams3"],
      "auto_scaling": false,
      "cost_monitoring": true,
      "priority": "primary"
    },
    "linode": {
      "enabled": true,
      "type": "compute",
      "services": ["instances", "volumes", "kubernetes"],
      "api_token_file": "~/.nexus/linode_token",
      "regions": ["us-east", "us-west"],
      "auto_scaling": false,
      "cost_monitoring": true
    },
    "vultr": {
      "enabled": true,
      "type": "compute",
      "services": ["instances", "block_storage", "kubernetes"],
      "api_token_file": "~/.nexus/vultr_token",
      "regions": ["ewr", "ord", "dfw"],
      "auto_scaling": false,
      "cost_monitoring": true
    },
    "hetzner": {
      "enabled": true,
      "type": "compute",
      "services": ["cloud_servers", "volumes", "load_balancers"],
      "api_token_file": "~/.nexus/hetzner_token",
      "regions": ["nbg1", "fsn1", "hel1"],
      "auto_scaling": false,
      "cost_monitoring": true
    },
    "google_drive": {
      "enabled": true,
      "type": "storage",
      "services": ["backup", "sync", "storage"],
      "credentials_file": "~/.nexus/gdrive_credentials.json",
      "mount_point": "~/GoogleDrive",
      "auto_sync": true,
      "backup_configs": true,
      "existing_integration": "/home/dave/Skippy/app-to-deploy/gdrive_gui.py"
    },
    "onedrive": {
      "enabled": false,
      "type": "storage",
      "services": ["backup", "sync", "storage"],
      "credentials_file": "~/.nexus/onedrive_credentials.json",
      "mount_point": "~/OneDrive",
      "auto_sync": false,
      "backup_configs": false
    },
    "dropbox": {
      "enabled": false,
      "type": "storage", 
      "services": ["backup", "sync", "storage"],
      "credentials_file": "~/.nexus/dropbox_credentials.json",
      "mount_point": "~/Dropbox",
      "auto_sync": false,
      "backup_configs": false
    },
    "backblaze_b2": {
      "enabled": false,
      "type": "storage",
      "services": ["backup", "archival"],
      "credentials_file": "~/.nexus/b2_credentials.json",
      "bucket_name": "nexus-backup",
      "encryption": true,
      "cost_monitoring": true
    },
    "wasabi": {
      "enabled": false,
      "type": "storage",
      "services": ["backup", "archival"],
      "credentials_file": "~/.nexus/wasabi_credentials.json",
      "bucket_name": "nexus-backup",
      "encryption": true,
      "cost_monitoring": true
    }
  },
  "backup_strategy": {
    "primary_storage": "google_drive",
    "secondary_storage": "digitalocean",
    "archival_storage": "backblaze_b2",
    "local_backup": true,
    "encryption": true,
    "compression": true,
    "versioning": true,
    "retention_days": 365
  },
  "sync_configuration": {
    "real_time_sync": ["google_drive"],
    "scheduled_sync": ["digitalocean", "aws_s3"],
    "backup_only": ["backblaze_b2", "wasabi"],
    "sync_conflicts": "timestamp_newest",
    "bandwidth_limit": "50MB",
    "sync_exclusions": [
      "*.tmp", "*.temp", "*.log", "*~", ".DS_Store", "Thumbs.db",
      "node_modules/", ".git/", ".cache/", "snap/*/common/", "snap/*/[0-9]*/"
    ]
  },
  "cost_monitoring": {
    "enabled": true,
    "alert_threshold": 50.00,
    "currency": "USD",
    "billing_alerts": true,
    "usage_tracking": true,
    "optimization_suggestions": true
  },
  "integration_features": {
    "auto_discovery": true,
    "health_monitoring": true,
    "performance_analytics": true,
    "security_scanning": true,
    "compliance_reporting": false
  }
}